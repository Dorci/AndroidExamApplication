<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/singlePoem_constraintLayout"
    android:layout_width="match_parent"
    android:background="#d5d5d5"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SinglePoemTextView"
        android:layout_width="337dp"
        android:layout_height="433dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SinglePoemAuthorTextView"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SinglePoemTextView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/likeButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="@string/Like"
        app:icon="@drawable/heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SinglePoemAuthorTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>
